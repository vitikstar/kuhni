<div class="category-product-page">
    <div class="block__bg main__bg block__bg_small"></div>
    <div id="product-product">
        {{ content_top }}
        <div id="content" class="container">
            <ul class="breadcrumb">
                {% set i = 0 %}
                {% set length = breadcrumbs|length %}
                {% for breadcrumb in breadcrumbs %}
                    {% set i = i + 1 %}
                    {% if length != i %}
                        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                    {% else %}
                        <li>{{ breadcrumb.text }}</li>
                    {% endif %}
                {% endfor %}
            </ul>


            <div class="p-block-wrap row">

                {#### product left #}
                <div class="p-block-image col-sm-7">
                    {% if thumb or images %}
                        <div class="p-thumbnails">
                            {% if thumb %}
                                <div class="p-thumbnail-main">
                                    <a data-fancybox="gallery" href="{{ popup }}" title="{{ heading_title }}">
                                        <img src="{{ thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}" class="img-responsive" />
                                    </a>
                                </div>
                            {% endif %}
                            {% if images %}
                                <div class="p-add-images before-slider">
                                    {% for image in images %}
                                        <div class="p-add-image">
                                            <a data-fancybox="gallery" href="{{ image.popup }}" title="{{ heading_title }}">
                                                <img src="{{ image.thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}" class="img-responsive" />
                                            </a>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
                <script>
                    $(document).ready(function() {
                        var slider = $('.p-add-images');
                        if (slider.length) {
                            slider.removeClass('before-slider');

                            slider.slick({
                                slidesToShow: 5,
                                slidesToScroll: 1,
                                arrows: false,
                                dots: false,
                                infinite: false,
                                nextArrow: '<div class="slick-next"></div>',
                                prevArrow: '<div class=slick-prev></div>',
                                vertical: true,
                                verticalSwiping: true,
                                adaptiveHeight: true
                                ,responsive: [
                                    {
                                        breakpoint: 767,
                                        settings: {
                                            slidesToShow: 3
//                                    ,adaptiveHeight: true
                                        }
                                    }
                                ]
                            });

                            $('.review-module').css({'visibility':'visible'});


                        }
                    });
                </script>
                {#### end product left #}


                {#### product right #}
                <div class="p-block-product col-sm-5">
                    <h1 class="p-title">{{ heading_title }}</h1>
                    {% if price %}
                        <div class="p-price">
                            {% if not special %}
                                <div class="p-price-block">от <span class="price-new">{{ price }}</span> за п. метр</div>
                            {% else %}
                                <div class="p-price-block">от <span class="price-new">{{ special }}</span> <span class="price-old">{{ price }}</span> за п. метр</div>
                            {% endif %}
                        </div>
                    {% endif %}
                    <div class="p-free-design">
                        <button class="p-free-design-btn"><span>Бесплатный дизайн-проект</span></button>
                    </div>
                    <div class="p-btn-wrap">
                        <button class="p-one-click p-btn button">Заказать в 1 клик</button>
                        <button onclick="call_popup_1_show()" class="p-order p-btn button">Заказать расчёт</button>
                    </div>
                </div>
                {#### end product left #}


                {#### tabs #}
                {% if description or attribute_groups %}
                    <div class="p-block-tabs col-sm-12">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#tab-description" data-toggle="tab">{{ tab_description }}</a></li>
                            <li><a href="#tab-calculator" data-toggle="tab">Калькулятор</a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab-description">
                                <div class="tab-description-specification">
                                    <div class="tab-description">
                                        {{ description }}
                                    </div>
                                    {% if attribute_groups %}
                                        <div class="tab-specification">
                                            <div class="spec-items">
                                                {% for attribute_group in attribute_groups %}
                                                    {% for attribute in attribute_group.attribute %}
                                                        <div class="spec-item">
                                                            <div class="spec-item-name">{{ attribute.name }}</div>
                                                            <div class="spec-item-text">{{ attribute.text }}</div>
                                                        </div>
                                                    {% endfor %}
                                                {% endfor %}
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="tab-pane" id="tab-calculator">
                                <script>
                                    $(document).ready(function() {
                                       $('.block2').appendTo('#tab-calculator').show();
                                    });
                                </script>
                            </div>
                        </div>
                    </div>
                {% endif %}
                {#### end tabs #}
            </div>

            </div>

