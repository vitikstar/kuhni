    <script>
        var header_menu = $('.header-menu').clone();
        $('.header-menu-fixed').append(header_menu);

        menu_fixed();
        $(document).ready(function() {
            menu_fixed();
        });
        $(window).scroll(function(){
            menu_fixed();
        });

        function menu_fixed() {
            var width = window.innerWidth;
//            if (width > 767) {
                var menu_fixed = $('.header-menu-fixed');
                var menu_offset_top = 200;
                var window_scroll_top = $(window).scrollTop();

                if (window_scroll_top > menu_offset_top) {
                    menu_fixed.fadeIn();
                } else {
                    menu_fixed.fadeOut();
                }
//            }
        }
    </script>
