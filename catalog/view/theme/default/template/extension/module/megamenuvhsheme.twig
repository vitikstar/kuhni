<link rel="stylesheet" href="catalog/view/theme/default/stylesheet/menuprosheme.css">
{% if menu_sheme_type is defined and menu_sheme_type == '1' %}
<div class="category-sheme">
	<nav id="menuprosheme">
		<div>
		<div class="title-menu-sheme"><i class="fa fa-bars"></i> {{ heading_title }}</div>
		  <ul class="nav navbar-nav">
			{% for item in items %} 
				<li><a href="{{ item.href }}" rel="nofollow">{{ item.name }} 
					{% if item.children %}<span class="show-sc-sheme" data-toggle="collapse"><i class="fa fa-plus plus"></i></span>{% endif %} 
						{% if item.thumb %}
							<img alt="{{ item.name }}" class="sheme-menu-icon {% if item.thumb_hover %}pitem-icon{% endif %}" src="{{ item.thumb }}"/>
						{% endif %} 
						{% if item.thumb_hover %}
							<img alt="{{ item.name }}" class="sheme-menu-icon hitem-icon" src="{{ item.thumb_hover }}"/>
						{% endif %} 
						{% if item.sticker_parent is not empty %}
							<span style="color:#{{ item.spctext }}; background-color:#{{ item.spbg }}" class="cat-label cat-label-label">{{ item.sticker_parent }}</span>
						{% endif %} 
					</a>
					
					{% if item.children is not empty %} 
						<div class="collapse mob-submenu-list">
							<ul class="list-unstyled">
								{% for child in item.children %} 
									<li>
										<a href="{{ child.href }}" rel="nofollow">{{ child.name }} 
											{% if (child.children is not empty) %}<span class="show-sc-sheme" data-toggle="collapse"><i class="fa fa-plus plus"></i></span>{% endif %} 
										</a>
										{% if child.children is not empty %} 
											<div class="collapse mob-submenu-list-3lev">
												<ul class="list-unstyled">
													{% for subchild in child.children %} 
													{% if item.type == 'freelink' %} 
														<li><a href="{{ subchild.link }}"> - {{ subchild.title }}</a></li>
													{% else %} 
														<li><a href="{{ subchild.href }}"> - {{ subchild.name }}</a></li>
													{% endif %} 
													{% endfor %} 
												</ul>
											</div>
										{% endif %} 
									</li>
								{% endfor %} 
							</ul>
						</div>
					{% endif %} 
					
				</li>
			{% endfor %} 
			
		  </ul>
		</div>
	</nav>
	{% if sheme_menu_mask is defined and sheme_menu_mask == 1 %} 
	<div id="maskMenuShemeA"></div>
	{% endif %} 
</div>

<script>
$(document).ready(function(){
var url=document.location.href;
$.each($("#menuprosheme a"),function(){
if(url.indexOf(this.href)>=0){
$(this).next().toggleClass("in");
$(this).addClass("active-m");
$(this).children().toggleClass("open-sc-sheme");
};
});
});
$("#menuprosheme .show-sc-sheme").click(function () {
	$(this).toggleClass("open-sc-sheme");
	$(this).parent().next().toggleClass("in");
});
</script>
{% endif %} 
{% if menu_sheme_type is defined and menu_sheme_type == '2' %} 
